{
  "name": "cell-coat",
  "version": "1.0.0",
  "private": true,
  "description": "Проект для хакатона Cell Cover",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.0.0",
    "browser-sync": "2.27.10",
    "del": "5.1.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.0",
    "gulp-clean-css": "^4.2.0",
    "gulp-concat": "2.6.1",
    "gulp-uglify": "^3.0.2",
    "stylelint": "9.2.x",
    "stylelint-config-htmlacademy": "^0.1.4"
  },
  "scripts": {
